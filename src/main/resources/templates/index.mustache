{{>layout/header}}
<h2> 웹 서비스 </h2>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">

            {{#name}}
                <span id="user">{{name}}</span>  접속 중
                <a href="/posts/save" role="button" class="btn btn-outline-primary">글 등록</a>
                <a href="/chat" class="btn btn-outline-primary">채팅방 입장</a>
                <a href="/logout" class="btn btn-outline-danger" role="button">로그아웃</a>
            {{/name}}
            {{^name}}
                <a href="/oauth2/authorization/google" class="btn btn-outline-primary" role="button">구글 로그인</a>
                <a href="/oauth2/authorization/naver" class="btn btn-outline-primary" role="button">네이버 로그인</a>
            {{/name}}
        </div>
    </div>
    <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>게시글번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>최종수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
</div>

{{>layout/footer}}